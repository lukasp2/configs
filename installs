## Step 1: add apt repositories in /etc/apt/sources.list, then run sudo apt update

## Nice to have
sudo apt update; sudo apt upgrade; sudo apt autoremove
sudo apt install -y emacs curl git xclip htop ncdu yakuake python3-pip

## Additionals
# sudo apt install -y entr gcc 

## Generate ssh keys (push and pull from git w/o needing credentials)
ssh-keygen -t rsa
eval $(ssh-agent -s)
ssh-add ~/.ssh/id_rsa
# copy the ssh (you have to paste in into github manually)
xclip -sel clip < ~/.ssh/id_rsa.pub

# setup git
git config --global user.email "lukpohl3@gmail.com"
git config --global user.name "Lukas Pohlman"
git config --global core.editor "emacs --wait"
git config --global core.autocrlf input #('false' instead of 'input' if windows)
